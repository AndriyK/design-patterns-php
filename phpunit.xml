<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false">
    <testsuites>
        <testsuite name="Strategy">
            <directory suffix=".php">./tests/Strategy</directory>
        </testsuite>
        <testsuite name="Observer">
            <directory suffix=".php">./tests/Observer</directory>
        </testsuite>
        <testsuite name="Decorator">
            <directory suffix=".php">./tests/Decorator</directory>
        </testsuite>
        <testsuite name="Factory">
            <directory suffix=".php">./tests/Factory</directory>
        </testsuite>
        <testsuite name="Singleton">
            <directory suffix=".php">./tests/Singleton</directory>
        </testsuite>
        <testsuite name="Command">
            <directory suffix=".php">./tests/Command</directory>
        </testsuite>
        <testsuite name="Adapter">
            <directory suffix=".php">./tests/Adapter</directory>
        </testsuite>
        <testsuite name="Facade">
            <directory suffix=".php">./tests/Facade</directory>
        </testsuite>
        <testsuite name="TemplateMethod">
            <directory suffix=".php">./tests/TemplateMethod</directory>
        </testsuite>
        <testsuite name="Iterator">
            <directory suffix=".php">./tests/Iterator</directory>
        </testsuite>
        <testsuite name="State">
            <directory suffix=".php">./tests/State</directory>
        </testsuite>
        <testsuite name="Proxy">
            <directory suffix=".php">./tests/Proxy</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>